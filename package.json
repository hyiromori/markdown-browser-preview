{
  "name": "@mryhryki/markdown-preview",
  "description": "Markdown realtime preview on browser",
  "version": "0.4.3",
  "author": "mryhryki",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "markdown",
    "preview"
  ],
  "homepage": "https://github.com/mryhryki/markdown-preview#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mryhryki/markdown-preview.git"
  },
  "bugs": {
    "url": "https://github.com/mryhryki/markdown-preview/issues"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0"
  },
  "main": "index.js",
  "bin": {
    "markdown-preview": "index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-ws": "^5.0.2",
    "log4js": "^6.9.1",
    "opener": "^1.5.2",
    "serve-index": "^1.9.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-ws": "^3.0.1",
    "@types/jest": "^29.5.2",
    "@types/opener": "^1.4.0",
    "@types/serve-index": "^1.9.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch ./src/ --no-opener --log-level debug --exec 'npm start",
    "lint": "eslint ./src/",
    "lint:fix": "eslint ./src/ --fix",
    "release": "npm run build && npm publish",
    "start": "npm run build && node ./index.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "type": "tsc --noEmit",
    "type:watch": "tsc --noEmit --watch"
  }
}
