{
  "name": "@mryhryki/markdown-preview",
  "description": "Markdown realtime preview on browser",
  "version": "0.5.9",
  "author": "mryhryki",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "markdown",
    "preview"
  ],
  "homepage": "https://github.com/mryhryki/markdown-preview#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mryhryki/markdown-preview.git"
  },
  "bugs": {
    "url": "https://github.com/mryhryki/markdown-preview/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "main": "index.js",
  "bin": {
    "markdown-preview": "index.js"
  },
  "dependencies": {
    "express": "^4.19.2",
    "express-ws": "^5.0.2",
    "log4js": "^6.9.1",
    "opener": "^1.5.2",
    "serve-index": "^1.9.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-ws": "^3.0.4",
    "@types/jest": "^29.5.12",
    "@types/opener": "^1.4.3",
    "@types/serve-index": "^1.9.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch ./src/ --ext 'ts' --exec 'npm start -- --no-opener --log-level debug'",
    "fmt": "prettier --write ./src/**/*.ts ./**/*.html && eslint ./src/**/*.ts --fix",
    "lint": "prettier --check ./src/**/*.ts ./**/*.html && eslint ./src/**/*.ts",
    "release": "npm run build && npm publish",
    "start": "npm run build && node ./index.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "type": "tsc --noEmit",
    "type:watch": "tsc --noEmit --watch"
  },
  "files": [
    "index.js",
    "src/**/*.js",
    "static/**/*",
    "template/**/*"
  ],
  "prettier": {
    "printWidth": 120
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
